{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020"],
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve"
  },
  "references": [
    {
      "path": "packages/web"
    },
    {
      "path": "packages/core"
    }
  ],
  "exclude": ["node_modules"]
}
